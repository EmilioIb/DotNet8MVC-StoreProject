@page
@model StoreProjectWebRazor.Pages.Categories.IndexModel

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h1>Category List</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/Create" class="btn btn-primary">
               Create new Category
            </a>
        </div>
    </div>


    <table class="table table-border table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Display order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td class="w-25">@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-100 btn-group" role="group">
                            <a asp-page="/Categories/Edit" asp-route-id="@obj.CategoryId" class="btn btn-warning mx-2">
                                Edit
                            </a>
                            <a asp-page="/Categories/Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>