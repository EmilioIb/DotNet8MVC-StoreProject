@page
@model StoreProjectWebRazor.Pages.Categories.EditModel
@{
}

<form method="post">
    <div class="border pt-4 p-3">
        <div class="row pb-2">
            <h1>Edit Category</h1>
            <hr />
        </div>
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div class="mb-3">
            <input asp-for=CategoryItem.CategoryId hidden />
            <label asp-for="CategoryItem.Name" class="mb-2"></label>
            <input asp-for="CategoryItem.Name" class="form-control" />
            <span asp-validation-for="CategoryItem.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CategoryItem.DisplayOrder" class="mb-2"></label>
            <input asp-for="CategoryItem.DisplayOrder" class="form-control" />
            <span asp-validation-for="CategoryItem.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Edit</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-secondary  form-control">Back to list</a>
            </div>
        </div>

    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}