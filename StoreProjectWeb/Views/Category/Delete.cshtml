@model Category

<form method="post">
    <div class="border pt-4 p-3">
        <div class="row pb-2">
            <h1>Delete Category</h1>
            <hr />
        </div>
        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
        <div class="mb-3">
            <input asp-for=CategoryId hidden />
            <label asp-for="Name" class="mb-2"></label>
            <input asp-for="Name" class="form-control" disabled/>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="mb-2"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled/>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
            </div>
        </div>

    </div>

</form>